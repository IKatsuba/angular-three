{
  "projectType": "library",
  "root": "packages/postprocessing/bloom-pass",
  "sourceRoot": "packages/postprocessing/bloom-pass/src",
  "prefix": "ngt",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "packages/postprocessing/bloom-pass/tsconfig.lib.json",
        "project": "packages/postprocessing/bloom-pass/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/postprocessing/bloom-pass/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/postprocessing/bloom-pass/src/**/*.ts",
          "packages/postprocessing/bloom-pass/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/postprocessing/bloom-pass"],
      "options": {
        "jestConfig": "packages/postprocessing/bloom-pass/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:postprocessing", "type:library", "context:bloom-pass"]
}
