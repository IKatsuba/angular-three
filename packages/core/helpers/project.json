{
  "projectType": "library",
  "root": "packages/core/helpers",
  "sourceRoot": "packages/core/helpers/src",
  "prefix": "ngt",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "packages/core/helpers/tsconfig.lib.json",
        "project": "packages/core/helpers/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/core/helpers/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/core/helpers/src/**/*.ts",
          "packages/core/helpers/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/core/helpers"],
      "options": {
        "jestConfig": "packages/core/helpers/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:core", "type:library", "context:helpers"]
}
