{
  "projectType": "library",
  "root": "packages/controls/first-person-controls",
  "sourceRoot": "packages/controls/first-person-controls/src",
  "prefix": "ngt",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "packages/controls/first-person-controls/tsconfig.lib.json",
        "project": "packages/controls/first-person-controls/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/controls/first-person-controls/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/controls/first-person-controls/src/**/*.ts",
          "packages/controls/first-person-controls/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/controls/first-person-controls"],
      "options": {
        "jestConfig": "packages/controls/first-person-controls/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:controls", "type:library", "context:first-person-controls"],
  "configFilePath": "packages/controls/first-person-controls/project.json"
}
