{
  "projectType": "library",
  "root": "packages/helpers/core",
  "sourceRoot": "packages/helpers/core/src",
  "prefix": "ngt",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "packages/helpers/core/tsconfig.lib.json",
        "project": "packages/helpers/core/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/helpers/core/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/helpers/core/src/**/*.ts",
          "packages/helpers/core/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/helpers/core"],
      "options": {
        "jestConfig": "packages/helpers/core/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:helpers", "type:library", "context:core"],
  "configFilePath": "packages/helpers/core/project.json"
}
