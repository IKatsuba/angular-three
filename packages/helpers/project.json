{
  "projectType": "library",
  "root": "packages/helpers",
  "sourceRoot": "packages/helpers/src",
  "prefix": "ngt",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "packages/helpers/tsconfig.lib.json",
        "project": "packages/helpers/ng-package.json",
        "updateBuildableProjectDepsInPackageJson": false
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/helpers/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/helpers/src/**/*.ts",
          "packages/helpers/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/helpers"],
      "options": {
        "jestConfig": "packages/helpers/jest.config.js",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/helpers"
      }
    }
  },
  "tags": ["scope:helpers", "type:library"]
}
