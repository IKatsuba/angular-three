{
  "projectType": "library",
  "root": "packages/popmotion",
  "sourceRoot": "packages/popmotion/src",
  "prefix": "ngt",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "packages/popmotion/tsconfig.lib.json",
        "project": "packages/popmotion/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/popmotion/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/popmotion/src/**/*.ts",
          "packages/popmotion/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/popmotion"],
      "options": {
        "jestConfig": "packages/popmotion/jest.config.js",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/popmotion"
      }
    }
  },
  "tags": ["scope:popmotion", "type:library"]
}
